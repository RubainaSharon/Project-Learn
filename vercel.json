{
  "version": 2,
  "builds": [
    {
      "src": "quiz-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "quiz-frontend/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "quiz-frontend/$1"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*\\.ttf)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "font/ttf"
        }
      ]
    },
    {
      "source": "/assets/(.*\\.otf)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "font/otf"
        }
      ]
    }
  ]
}
